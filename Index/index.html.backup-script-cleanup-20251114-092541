// Main PIR App Component
function PIRApp() {
    // ═══════════════════════════════════════════════════════════
    // LOCAL STATE: Minimal state management for auth & routing
    // ═══════════════════════════════════════════════════════════

    const [user, setUser] = React.useState(null);
    const [currentView, setCurrentView] = React.useState('home');
    const [loading, setLoading] = React.useState(true);

    // ═══════════════════════════════════════════════════════════
    // PHASE 7C: UI Component State
    // State needed for HeaderBar, ModalRenderer, and other UI components
    // ═══════════════════════════════════════════════════════════

    // User data for HeaderBar avatar
    const [userData, setUserData] = React.useState(null);

    // Modal states
    const [showDisclaimerModal, setShowDisclaimerModal] = React.useState(false);
    const [showTermsModal, setShowTermsModal] = React.useState(false);
    const [showPrivacyModal, setShowPrivacyModal] = React.useState(false);
    const [showDataHandlingModal, setShowDataHandlingModal] = React.useState(false);
    const [showCrisisModal, setShowCrisisModal] = React.useState(false);
    const [showSidebar, setShowSidebar] = React.useState(false);
    const [showHabitTrackerModal, setShowHabitTrackerModal] = React.useState(false);
    const [showIncompleteTasksModal, setShowIncompleteTasksModal] = React.useState(false);
    const [showMilestoneModal, setShowMilestoneModal] = React.useState(false);
    const [showProfileModal, setShowProfileModal] = React.useState(false);

    // Notification count for BottomNavigation badge
    const [unreadCount, setUnreadCount] = React.useState(0);

    // Pull-to-refresh state
    const [pulling, setPulling] = React.useState(false);
    const [pullDistance, setPullDistance] = React.useState(0);
    const [refreshing, setRefreshing] = React.useState(false);

    // Data for ModalRenderer (incomplete tasks modal)
    const [goals, setGoals] = React.useState([]);
    const [assignments, setAssignments] = React.useState([]);

    // Data for MainContent conditional rendering
    const [checkIns, setCheckIns] = React.useState([]);
    const [resources, setResources] = React.useState([]);

    // ═══════════════════════════════════════════════════════════
    // PHASE 5 STEP 2: Replaced global state with local useState hooks
    // PIRapp now manages only: user (auth), currentView (routing), loading
    // All tab components fetch their own data and manage their own state
    // ═══════════════════════════════════════════════════════════

    // ==========================================
    // STEP 3: ALL HOOKS REMOVED - Tabs fetch their own data
    // Touch handlers moved to Journey tab components
    // Pull-to-refresh removed (handled by tab components)
    // Data loading hooks removed (tabs handle their own data)
    // Icon initialization removed (handled by components)
    // Chart rendering removed (handled by Journey tab)
    // Profile completion check removed (handled by ProfileView)
    // Midnight reset removed (handled by individual tabs)
    // ==========================================
    // STEP 3: ALL BUSINESS LOGIC REMOVED
    // Assignment actions: Moved to TasksTab component
    // Messaging actions: Moved to CommunityTab component
    // Emergency actions: Handled by CrisisButton component
    // Export actions: Moved to ProfileView component
    // Notification actions: Moved to NotificationsTab component
    // Pattern detection: Removed (was unused)
    // ==========================================

    // ==========================================
    // AUTHENTICATION & LOADING
    // ==========================================

    // Listen for auth state changes
    React.useEffect(() => {
        const unsubscribe = firebase.auth().onAuthStateChanged((authUser) => {
            if (authUser) {
                setUser(authUser);
                setLoading(false);

                // Load user data for HeaderBar
                const db = firebase.firestore();
                db.collection('users').doc(authUser.uid).get()
                    .then(doc => {
                        if (doc.exists) {
                            setUserData(doc.data());
                        }
                    })
                    .catch(err => console.error('Error loading user data:', err));

                // Load goals and assignments for ModalRenderer
                db.collection('goals')
                    .where('userId', '==', authUser.uid)
                    .get()
                    .then(snapshot => {
                        const goalsData = [];
                        snapshot.forEach(doc => {
                            goalsData.push({ id: doc.id, ...doc.data() });
                        });
                        setGoals(goalsData);
                    })
                    .catch(err => console.error('Error loading goals:', err));

                db.collection('assignments')
                    .where('userId', '==', authUser.uid)
                    .get()
                    .then(snapshot => {
                        const assignmentsData = [];
                        snapshot.forEach(doc => {
                            assignmentsData.push({ id: doc.id, ...doc.data() });
                        });
                        setAssignments(assignmentsData);
                    })
                    .catch(err => console.error('Error loading assignments:', err));

                // Load notifications count for BottomNavigation
                db.collection('notifications')
                    .where('userId', '==', authUser.uid)
                    .where('read', '==', false)
                    .onSnapshot(snapshot => {
                        setUnreadCount(snapshot.size);
                    });

                // Check if disclaimer accepted, show modal if not
                const disclaimerAccepted = localStorage.getItem('disclaimerAccepted');
                if (!disclaimerAccepted) {
                    setShowDisclaimerModal(true);
                }
            } else {
                // Redirect to login if not authenticated
                window.location.href = '/';
            }
        });

        return () => unsubscribe();
    }, []);

    // ═══════════════════════════════════════════════════════════
    // PHASE 7C: Handler Functions
    // Callbacks passed to UI components
    // ═══════════════════════════════════════════════════════════

    // Mark all notifications as read (for HeaderBar)
    const markAllNotificationsAsRead = React.useCallback(() => {
        if (!user) return;
        const db = firebase.firestore();
        db.collection('notifications')
            .where('userId', '==', user.uid)
            .where('read', '==', false)
            .get()
            .then(snapshot => {
                const batch = db.batch();
                snapshot.forEach(doc => {
                    batch.update(doc.ref, { read: true });
                });
                return batch.commit();
            })
            .then(() => {
                console.log('All notifications marked as read');
            })
            .catch(err => console.error('Error marking notifications as read:', err));
    }, [user]);

    // Touch handlers for pull-to-refresh
    const contentRef = React.useRef(null);
    const touchStartY = React.useRef(0);

    const handleTouchStart = (e) => {
        touchStartY.current = e.touches[0].clientY;
    };

    const handleTouchMove = (e) => {
        const touchY = e.touches[0].clientY;
        const scrollTop = contentRef.current?.scrollTop || 0;

        if (scrollTop === 0 && touchY > touchStartY.current) {
            const distance = touchY - touchStartY.current;
            setPullDistance(distance);
            if (distance > 80) {
                setPulling(true);
            }
        }
    };

    const handleTouchEnd = () => {
        if (pullDistance > 80) {
            setRefreshing(true);
            setPulling(false);
            setPullDistance(0);

            // Refresh data
            setTimeout(() => {
                setRefreshing(false);
                window.location.reload();
            }, 1000);
        } else {
            setPulling(false);
            setPullDistance(0);
        }
    };

    // Show loading spinner while checking auth
    if (loading) {
        return React.createElement(window.GLRSApp.components.LoadingSpinner, {
            message: 'Loading your recovery dashboard...'
        });
    }

    // ==========================================
    // RENDER: Integrated UI components
    // ==========================================

    return React.createElement('div', { className: 'app-container' },
        // Pull-to-Refresh Indicator
        window.GLRSApp?.components?.PullToRefreshIndicator &&
            React.createElement(window.GLRSApp.components.PullToRefreshIndicator, {
                pulling: pulling,
                pullDistance: pullDistance,
                refreshing: refreshing
            }),

        // Header Bar
        window.GLRSApp?.components?.HeaderBar &&
            React.createElement(window.GLRSApp.components.HeaderBar, {
                currentView: currentView,
                onShowSidebar: setShowSidebar,
                onShowIncompleteTasksModal: setShowIncompleteTasksModal,
                onShowMilestoneModal: setShowMilestoneModal,
                onShowProfileModal: setShowProfileModal,
                onMarkAllNotificationsAsRead: markAllNotificationsAsRead,
                userData: userData,
                user: user
            }),

        // Main Content (view router with tabs)
        window.GLRSApp?.components?.MainContent &&
            React.createElement(window.GLRSApp.components.MainContent, {
                contentRef: contentRef,
                handleTouchStart: handleTouchStart,
                handleTouchMove: handleTouchMove,
                handleTouchEnd: handleTouchEnd,
                currentView: currentView,
                loading: loading,
                userData: userData,
                goals: goals,
                assignments: assignments,
                checkIns: checkIns,
                resources: resources
            }),

        // Bottom Navigation
        window.GLRSApp?.components?.BottomNavigation &&
            React.createElement(window.GLRSApp.components.BottomNavigation, {
                currentView: currentView,
                onChangeView: setCurrentView,
                unreadCount: unreadCount
            }),

        // Crisis Button
        window.GLRSApp?.components?.CrisisButton &&
            React.createElement(window.GLRSApp.components.CrisisButton, {
                onShowCrisisModal: setShowCrisisModal
            }),

        // Legal Footer
        window.GLRSApp?.components?.LegalFooter &&
            React.createElement(window.GLRSApp.components.LegalFooter, {
                onShowTermsModal: setShowTermsModal,
                onShowPrivacyModal: setShowPrivacyModal,
                onShowDataHandlingModal: setShowDataHandlingModal
            }),

        // Modal Renderer (all app-level modals)
        window.GLRSApp?.components?.ModalRenderer &&
            React.createElement(window.GLRSApp.components.ModalRenderer, {
                // Modal states
                showDisclaimerModal: showDisclaimerModal,
                showTermsModal: showTermsModal,
                showPrivacyModal: showPrivacyModal,
                showDataHandlingModal: showDataHandlingModal,
                showCrisisModal: showCrisisModal,
                showSidebar: showSidebar,
                showHabitTrackerModal: showHabitTrackerModal,
                showIncompleteTasksModal: showIncompleteTasksModal,

                // Close handlers
                onCloseDisclaimerModal: () => setShowDisclaimerModal(false),
                onCloseTermsModal: () => setShowTermsModal(false),
                onClosePrivacyModal: () => setShowPrivacyModal(false),
                onCloseDataHandlingModal: () => setShowDataHandlingModal(false),
                onCloseCrisisModal: () => setShowCrisisModal(false),
                onCloseSidebar: () => setShowSidebar(false),
                onCloseHabitTrackerModal: () => setShowHabitTrackerModal(false),
                onCloseIncompleteTasksModal: () => setShowIncompleteTasksModal(false),

                // Open handler
                onOpenHabitTrackerModal: () => setShowHabitTrackerModal(true),

                // Data
                goals: goals,
                assignments: assignments
            })
    );
}  // Close PIRApp function (opening at line 2)

// ═══════════════════════════════════════════════════════════
// PHASE 7C: Export PIRApp Component
// ═══════════════════════════════════════════════════════════

// Expose PIRApp directly to global namespace
window.GLRSApp.components.PIRApp = PIRApp;

// Backward compatibility
window.PIRApp = PIRApp;

console.log('✅ PIRApp.js loaded - Phase 7C integrated (7 UI components with props)');

// ═══════════════════════════════════════════════════════════
// RENDER APP TO DOM
// ═══════════════════════════════════════════════════════════

// Wait for DOM to be ready before rendering
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', renderApp);
} else {
    // DOM already loaded, render immediately
    renderApp();
}

function renderApp() {
    console.log('🎬 Attempting to render React app...');
    console.log('React available:', typeof React !== 'undefined');
    console.log('ReactDOM available:', typeof ReactDOM !== 'undefined');
    console.log('Root element:', document.getElementById('root'));
    console.log('PIRApp component:', typeof PIRApp !== 'undefined');

    // Check all dependencies
    if (typeof React === 'undefined') {
        console.error('❌ React is not loaded!');
        return;
    }

    if (typeof ReactDOM === 'undefined') {
        console.error('❌ ReactDOM is not loaded!');
        return;
    }

    const rootElement = document.getElementById('root');
    if (!rootElement) {
        console.error('❌ Root element (#root) not found in DOM!');
        return;
    }

    if (typeof PIRApp !== 'function') {
        console.error('❌ PIRApp component not defined!');
        return;
    }

    // Render the app
    try {
        console.log('🚀 Rendering PIRApp to #root with 3-layer architecture...');

        // PHASE 5: Render PIRApp with minimal state (auth + routing only)
        ReactDOM.render(
            React.createElement(PIRApp, null),
            rootElement
        );

        console.log('✅ React app rendered successfully - tabs fetch their own data!');
    } catch (error) {
        console.error('❌ Failed to render app:', error);
        console.error('Error message:', error.message);
        console.error('Stack trace:', error.stack);

        // Show error to user
        rootElement.innerHTML = `
            <div style="
                color: white;
                padding: 50px;
                font-family: monospace;
                background: #1a1a1a;
                min-height: 100vh;
            ">
                <h1 style="color: #ff4444;">⚠️ App Failed to Load</h1>
                <p style="color: #ffaa00; font-size: 16px;">Error: ${error.message}</p>
                <pre style="
                    background: #000;
                    padding: 20px;
                    border-radius: 8px;
                    overflow: auto;
                    color: #00ff00;
                ">${error.stack}</pre>
                <p style="margin-top: 30px;">
                    <button onclick="location.reload()" style="
                        padding: 10px 20px;
                        background: #0077CC;
                        color: white;
                        border: none;
                        border-radius: 5px;
                        cursor: pointer;
                        font-size: 16px;
                    ">Reload Page</button>
                </p>
            </div>
        `;
    }
}

</body>
</html>
