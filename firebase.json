{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "**/package*.json",
      "**/.git/**",
      "CLAUDE.md",
      "CNAME",
      "admin/src/**",
      "admin/archive/**",
      "admin/*.ts",
      "admin/*.json",
      "admin/Research/**",
      "admin/index.html",
      "Index/pir-portal/src/**",
      "Index/pir-portal/*.ts",
      "Index/pir-portal/*.json"
    ],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin/dist/index.html"
      },
      {
        "source": "/admin/",
        "destination": "/admin/dist/index.html"
      },
      {
        "source": "/admin/**",
        "destination": "/admin/dist/index.html"
      },
      {
        "source": "/oauth-callback",
        "destination": "/Index/oauth-callback.html"
      },
      {
        "source": "/sign",
        "destination": "/sign.html"
      },
      {
        "source": "/sign.html",
        "destination": "/sign.html"
      },
      {
        "source": "/run-daily-test",
        "destination": "/run-daily-test.html"
      },
      {
        "source": "/run-daily-test.html",
        "destination": "/run-daily-test.html"
      },
      {
        "source": "/home",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/journey",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/journey/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/tasks",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/tasks/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/community",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/community/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/messages",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/messages/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/meetings",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/meetings/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/resources",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/resources/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/profile",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/profile/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/login",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/insights",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/insights/**",
        "destination": "/Index/pir-portal/dist/index.html"
      },
      {
        "source": "/",
        "destination": "/Index/pir-portal/dist/index.html"
      }
    ],
    "headers": [
      {
        "source": "Index/pir-portal/dist/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "admin/dist/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "apphosting": {
      "port": 5002,
      "rootDirectory": "./",
      "startCommand": "npm run dev"
    },
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5001
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "dataconnect": {
      "port": 9399,
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    },
    "tasks": {
      "port": 9499
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
